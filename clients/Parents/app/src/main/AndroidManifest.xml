<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fh_koeln.gellert_holter.parents" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Login"
            android:label="@string/title_activity_login"
            android:parentActivityName=".activities.Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fh_koeln.gellert_holter.parents.activities.Main" />
        </activity>
        <activity
            android:name=".activities.Forum"
            android:label="@string/title_activity_forum"
            android:parentActivityName=".activities.Main"
            android:launchMode="singleInstance" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fh_koeln.gellert_holter.parents.activities.Main" />
        </activity>
        <activity
            android:name=".activities.ShowThread"
            android:label="@string/title_activity_show_thread"
            android:parentActivityName=".activities.Forum"
            android:launchMode="singleInstance">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fh_koeln.gellert_holter.parents.activities.Forum" />
        </activity>
    </application>

</manifest>
